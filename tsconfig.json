{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2020", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "test/**/*.ts"]
}
